@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row">
    <div class="col-md-3">
        @if (Model.Work != null)
        {
            <partial name="~/Pages/WorkStatus.cshtml" for="Work" />
        }

        @if (Model.PRVM != null)
        {
            <partial name="~/Pages/PartialViews/PullRequestsView.cshtml" for="PRVM" />
        }
    </div>
</div>
<div class="row">
    <form method="get" class="milestone-form">
        <span class="form-input-label">Milestone:</span> @Html.EditorFor(m => m.Milestone, "Milestone", "Milestone")
        <input type="hidden" name="teamName" value="@Model.TeamName" />
        <button type="submit" class="form-submit-button">Retrieve</button>
    </form>
</div>
