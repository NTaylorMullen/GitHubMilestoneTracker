<style type="text/css">
    .column-header {
        font-size: 1.2em;
        font-weight: bolder;
        width: 130px;
    }

    .row-first-item {
        font-weight: bold;
    }

    .row-item {
        text-align: center;
        width: 130px;
    }

    .row-bottom {
        font-size: 1.1em;
    }
</style>
<h2>Work</h2>
<table class="table-bordered">
    <thead>
        <tr>
            <td class="column-header">Member</td>
            @foreach (var milestone in Model.Milestones)
            {
                <td class="column-header">@milestone</td>
            }
        </tr>
    </thead>
    @foreach (var member in Model.Members)
    {
        <tr>
            <td class="row-first-item">@member</td>

            @foreach (var milestone in Model.Milestones)
            {
                <td class="row-item">@Model[member, milestone]</td>
            }
        </tr>
    }

    @*<tr>
            <td class="row-bottom row-first-item">Total work left</td>
            <td class="row-bottom row-item">@Model.Sum(item => item.Value)</td>
        </tr>*@
</table>