@using MilestoneTracker.Model
@model WorkDataViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    IDictionary<string, double> sumByMilestone = new Dictionary<string, double>();
}
<style type="text/css">
    .column-header {
        font-size: 1.2em;
        font-weight: bolder;
        min-width: 150px;
        text-align: center;
    }

    .row-first-item {
        font-weight: bold;
        padding-left: 3px;
    }

    .row-item {
        text-align: center;
        width: 130px;
    }

    .row-bottom {
        font-size: 1.1em;
        font-weight: bolder;
    }
</style>
<h2>Work</h2>
<table class="table-bordered">
    <thead>
        <tr>
            <td class="column-header">Member</td>
            @foreach (var milestone in Model.Milestones)
            {
                sumByMilestone[milestone] = 0;
                <td class="column-header">@milestone</td>
            }
        </tr>
    </thead>
    @foreach (var member in Model.Members)
    {
        <tr>
            <td class="row-first-item">@member</td>

            @foreach (var milestone in Model.Milestones)
            {
                var value = Model[member, milestone];
                sumByMilestone[milestone] += value;
                <td class="row-item">@value</td>
            }
        </tr>
    }

    <tfoot>
        <tr>
            <td class="row-bottom row-first-item">Total work left</td>
            @foreach (var milestone in Model.Milestones)
            {
                <td class="row-bottom row-item">@sumByMilestone[milestone]</td>
            }
        </tr>
    </tfoot>
</table>